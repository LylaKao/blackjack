<div class="container">
  <div class="row" style="height: 180px">
    <div class="col border p-3">
      <%= render 'dealer', cards: @game.dealer_cards %>
    </div>
    <% (1..3).each do |n| %>
      <div  class="col border p-3">
        <%= render 'player', player: @players[n], seat_id: n %>
      </div>
    <% end %>
    </div>
    <div class="row">
    <div colspan="4" class="col border p-0">
      <div class="image img-rounded">
        <img src="assets/poker_table_small.PNG" alt="poker_table_small"  style="width:100%">
      </div>
    </div>
    </div>
    <div class="row" style="height: 180px">
    <% 7.downto(4).each do |n| %>
      <div class="col border p-3">
        <%= render 'player', player: @players[n], seat_id: n %>
      </div>
    <% end %>
  </div>
</div>

<!-- rendering partial -->
<div id="betUserModal">
 <%= render 'user_games/modal', min_bet: @game.settings.min_bet, seat_id: 0 %>
</div>

